<% if @cache_dir != false %>
    alias cc="sudo rm -R <%= @cache_dir -%>/* && sudo chmod -R 777 <%= @cache_dir -%>"
<% end %>
alias ph="sudo bin/phing -Dlocal=1"
alias hhi-move="sudo cp -r /usr/share/hhvm/hack/hhi hhi"
<% if @webserver == 'nginx' %>
    <%- if @php %>
alias rs="sudo service php5-fpm restart; sudo service nginx restart"
    <%- else %>
alias rs="sudo service nginx restart"
    <%- end %>

<% elsif @webserver == 'apache' %>

    <%- if @php %>
alias rs="sudo service php-fpm restart; sudo service apache2 restart"
    <%- else %>
alias rs="sudo service apache2 restart"
    <%- end %>
<% end %>
