  web: '/home/vagrant/app/web'
  cache: '/home/vagrant/cache'
  log: '/home/vagrant/log'

php:
    install: true
    version: '5.5'
    dev: true
    libpcre: true
    start_server: true
    phing: true
    
c_tools:
    gcc: true
    jsonc: false
    re2c: false

git:
    install: false

vim:
    install: true

mysql:
    install: true

nodejs:
    install: true

apache:
    install: true
    docroot: "%{web_dir}"

jsonc:
    dev: true
    dbg: true

ruby:
    install: true